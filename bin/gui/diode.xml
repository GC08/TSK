<?xml version="1.0" encoding="UTF-8"?>
 
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.chart.*?>
<?import gui.NumberTextField?>

<AnchorPane fx:id="guiContent" xmlns="http://javafx.com/javafx/8.0.40"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.DiodeController">
	<HBox>
		<VBox>
			<Button fx:id="pauseBtn" onAction="#pauseAction"
				prefHeight="28.0" prefWidth="125.0" text="Pauza" textFill="#115b0c">
				<font>
					<Font name="DejaVu Serif Bold" size="14.0" />
				</font>
			</Button>
			
			<fx:define>
				<ToggleGroup fx:id="diodeType" />
			</fx:define>
			
			<children>
				<RadioButton text="dioda krzemowa" toggleGroup="$diodeType" onAction="#selectSiAction"/>
				<RadioButton text="dioda germanowa" toggleGroup="$diodeType" onAction="#selectGeAction" selected="true"/>
			</children>


			<Label text="napięcie wejśćiowe/amplituda" fx:id="labelU"
				minHeight="16" minWidth="69" prefHeight="26.0" prefWidth="276.0" />
			<NumberTextField fx:id="uInTF" prefHeight="26.0" prefWidth="276.0"
				promptText="podaj napięcie" />

			<Label text="offset" fx:id="labelOffset" minHeight="16"
				minWidth="69" prefHeight="26.0" prefWidth="276.0" />
			<NumberTextField fx:id="offsetTF" prefHeight="26.0" prefWidth="276.0"
				promptText="podaj offset" />

			<Label text="częstotliwość" fx:id="labelFreq" minHeight="16"
				minWidth="69" prefHeight="26.0" prefWidth="276.0" />
			<NumberTextField fx:id="freqTF" prefHeight="26.0" prefWidth="276.0"
				promptText="podaj częstotliwość" />

			<fx:define>
				<ToggleGroup fx:id="sourceType" />
			</fx:define>
			
			<children>
				<RadioButton text="przebieg sinusoidalny" toggleGroup="$sourceType" onAction="#selectSinusAction"/>
				<RadioButton text="przebieg trójkątny" toggleGroup="$sourceType" onAction="#selectTriangulateAction" selected="true"/>
				<RadioButton text="prąd stały" toggleGroup="$sourceType" onAction="#selectDirectAction"/>
			</children>
			
			<Button fx:id="updateBtn" onAction="#updateAction"
				prefHeight="28.0" prefWidth="125.0" text="Aktualizuj" textFill="#115b0c">
				<font>
					<Font name="DejaVu Serif Bold" size="14.0" />
				</font>
			</Button>
		</VBox>

		<VBox>
			<LineChart fx:id="lcIF" prefHeight="330.0" prefWidth="580.0"
				animated="false">
				<xAxis>
					<NumberAxis side="BOTTOM" />
				</xAxis>

				<yAxis>
					<NumberAxis side="LEFT" />
				</yAxis>
			</LineChart>

			<LineChart fx:id="lcUF" prefHeight="330.0" prefWidth="580.0"
				animated="false">
				<xAxis>
					<NumberAxis side="BOTTOM" />
				</xAxis>

				<yAxis>
					<NumberAxis side="LEFT" />
				</yAxis>
			</LineChart>

			<LineChart fx:id="lcUSource" prefHeight="330.0" prefWidth="580.0"
				animated="false">
				<xAxis>
					<NumberAxis side="BOTTOM" />
				</xAxis>

				<yAxis>
					<NumberAxis side="LEFT" />
				</yAxis>
			</LineChart>
		</VBox>
	</HBox>
</AnchorPane>